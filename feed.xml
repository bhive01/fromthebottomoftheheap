<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title type="text" xml:lang="en">From the bottom of the heap</title>
    <link type="application/atom+xml" href="{{ site.url }}/feed.xml" rel="self"/>
    <link type="text" href="{{ site.url }}" rel="alternate"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>{{ site.url }}</id>
    <author>
        <name>{{ site.author.name }}</name>
        <email>{{ site.author.email }}</email>
        <uri>{{ site.url }}/about.html</uri>
    </author>
    <rights type="text">Copyright &amp;copy; 2010&amp;ndash;2013 {{ site.author.name }}. Available under Creative Commons CC-BY licence</rights>
    {% for post in site.posts limit:10 %}
    <entry>
        <title>{{ post.title | xml_escape }}</title>
        <link href="{{ post.url }}"/>
        <author>
            <name>{{ site.author.name }}</name>
        </author>
        <published>{{ post.date | date_to_xmlschema }}</published>
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>{{ post.id }}/</id>
        {% if post.excerpt %}
        <summary type="html">
            {{ post.excerpt | markdownify | xml_escape }}
        </summary>
        {% endif %}
        <content type="html">
            {{ post.content | xml_escape }}
        </content>
    </entry>
    {% endfor %}
</feed>
